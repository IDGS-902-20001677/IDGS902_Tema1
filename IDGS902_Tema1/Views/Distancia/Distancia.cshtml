@model IDGS902_Tema1.Models.Distancia

@{
    ViewBag.Title = "Distancia";
}

<h2>Distancia entre dos puntos</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="/" method="post">
                <label>Punto 1:</label>
                <input type="text" name="X1" />
                <input type="text" name="Y1" />
                <br />
                <label>Punto 2:</label>
                <input type="text" name="X2" />
                <input type="text" name="Y2" />
                <br />

                <input type="submit" name="name" value="Calcular" />
            </form>
        </div>
        <div class="col-lg-6">
            <h1>El resultado es: @Html.DisplayFor(model => model.Res)</h1>
        </div>
    </div>
</div>

